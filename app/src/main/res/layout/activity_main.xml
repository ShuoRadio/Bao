<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffff"
    >


    <FrameLayout
        android:id="@+id/fg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/ll_main_radio"
        android:layout_marginBottom="60dp"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_above="@+id/ll_main_radio"
        android:background="#999999"
        >
    </View>

    <LinearLayout android:id="@+id/ll_main_radio"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="5sp"
        android:background="#ffff">

        <RadioGroup android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_main"
                style="@style/rb_style"
                android:drawableTop="@drawable/main_eat2"
                android:text="外卖"
                android:textColor="@color/main_icon"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:background="@null"
                />
            <RadioButton
                android:id="@+id/rb_order"
                style="@style/rb_style"
                android:drawableTop="@drawable/main_order1"
                android:text="订单"
                android:textColor="@color/main_icon"
                android:layout_marginRight="50dp"
                android:background="@null"
                />
            <RadioButton
                android:id="@+id/rb_mine"
                style="@style/rb_style"
                android:drawableTop="@drawable/main_mine1"
                android:text="我的"
                android:textColor="@color/main_icon"
                android:layout_marginRight="50dp"
                android:background="@null"
                />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>